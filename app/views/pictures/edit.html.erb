<h1>投稿の編集</h1>
<p id = "notice"><%= notice %></p>
<% if @picture.errors.any? %>
  <div id = "error_explanation">
    <h2><%= pluralize(@picture.errors.count,"error") %> prohibited this <%= @picture.name %> from being saved: </h2>
    <ul>
    <% @picture.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @picture, local: true) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content%>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.hidden_field :user_id %>
  </div>
  <%= f.submit "Edit" %>

<% end %>