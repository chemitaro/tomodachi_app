<h1>投稿一覧</h1>
<table>
  <tr>
    <th>title</th>
    <th>content</th>
    <th>name</th>
  </tr>
  <% @pictures.each do |pic| %>
  <tr>
    <td><%= pic.title %></td>
    <td><%= pic.content %></td>
    <td><%= @users.find(pic.user_id).name %></td>
    <td><%= link_to "詳細", picture_path(pic.id) %> </td>
    <td><%= link_to "編集", edit_picture_path(pic.id) if pic.user_id == current_user.id %> </td>
    <td><%= link_to "削除", picture_path(pic.id), method: :delete if pic.user_id == current_user.id %> </td>
  </tr>
  <% end %>
</table>